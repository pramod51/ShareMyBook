<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AddBookFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/upload_front_cover"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_centerInParent="true">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/add_image"
                            app:tint="#1565C0" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Front Cover"
                            android:textStyle="italic"
                            android:textColor="#0277BD"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:padding="8dp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/front_cover"
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_height="250dp"
                        android:scaleType="fitXY"/>
                </RelativeLayout>
                <View
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:id="@+id/upload_back_cover"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_centerInParent="true">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/add_image"
                            app:tint="#1565C0" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Back Cover"
                            android:textStyle="italic"
                            android:textColor="#0277BD"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:padding="8dp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/back_cover"
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_height="250dp"
                        android:scaleType="fitXY"/>
                </RelativeLayout>



            </LinearLayout>

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/description"
                android:inputType="text"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:minHeight="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="8dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:gravity="start"
                android:hint="Author"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />
            <EditText
                android:id="@+id/isbn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:hint="ISBN"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />
            <EditText
                android:id="@+id/genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:hint="Genre"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />
            <EditText
                android:id="@+id/publication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:hint="Publication"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />
            <EditText
                android:id="@+id/language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:hint="Language"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />
            <EditText
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:hint="Category"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />


            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:hint="@string/description"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:minHeight="100dp"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

