<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.YourRatingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:padding="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/your_rating"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Understand your rating\nYou can rate community peers on a scale of 1 to 5 after each book delivery."
            style="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#071B27"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Okay"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:cornerRadius="4dp"/>



    </LinearLayout>


</RelativeLayout>