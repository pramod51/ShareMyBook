<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="We have upgraded your\nSubscription"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#0D3C71"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="We have sent a confirmation to your\nMobile number"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#2B69AE" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/upgrade_subscription"
            android:scaleType="centerCrop"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/explore_book_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore Book Store"
            android:textAllCaps="false"
            android:minWidth="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</RelativeLayout>